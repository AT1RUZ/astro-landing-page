---
import projects from "../../config/projects.json";

interface Project {
  name: string;
  description: string;
  img: string;
}
---

<h2 class="text-5xl font-bold my-5 text-center">Projects</h2>

<section>
  <div class="flex flex-col gap-4">
    {
      projects.map((project) => (
        <div class="flex flex-col md:flex-row shadow-md rounded-lg p-4 gap-4 text-center md:text-left">
          <div class="flex-1 justify-center">
            <h3 class="text-2xl font-semibold my-4 text-left">
              {project.name}
            </h3>
            <p class="text-left">{project.description}</p>
            <button class="bg-indigo-500 hover:bg-indigo-400 px-3 py-2 my-3 rounded-xl">More Info</button>
          </div>
          <div class="flex-1">
            <img
              src={project.img}
              alt={project.name}
              class="rounded-lg w-72 h-48 m-auto"
            />
          </div>
        </div>
      ))
    }
  </div>
</section>
