---
import features from "../../config/features.json";

interface Feature {
  name: string;
  description: string;
}
---

<h1 class="text-center font-bold text-5xl mt-10">Features</h1>

<div class="grid md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4 p-4">
  {
    features.map((feature) => (
      <div class="rounded-xl p-10 bg-slate-800">
        <h2 class="text-2xl font-bold my-4">{feature.name}</h2>
        <p class="">{feature.description}</p>
      </div>
    ))
  }
</div>